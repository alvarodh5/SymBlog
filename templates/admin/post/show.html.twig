{% extends 'admin/base.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h3>Post Properties</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td> {{ post.content | u.truncate(50) }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_post_index') }}">Back to list</a>

    <a href="{{ path('admin_post_edit', {'id': post.id}) }}">Edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
